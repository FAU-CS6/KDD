\mode<presentation>


% FAU colors
\definecolor{faublue}{RGB}{0,47,108}
\definecolor{faubluedark}{RGB}{4,30,66}
\definecolor{fauyellow}{RGB}{255,184,28}
\definecolor{fauorange}{RGB}{232,119,34}
\definecolor{faured}{RGB}{200,15,46}
\definecolor{faureddark}{RGB}{151,27,47}
\definecolor{faucyan}{RGB}{0,163,224}
\definecolor{faucyandark}{RGB}{0,97,160}
\definecolor{faugreen}{RGB}{67,176,42}
\definecolor{faugreendark}{RGB}{34,136,72}
\definecolor{faugray}{RGB}{119,159,181}
\definecolor{faugraydark}{RGB}{65,116,141}

% Structure
\setbeamercolor{structure}{fg=black}

% Title
\setbeamercolor{title}{fg=white}
\setbeamercolor{title page}{fg=white}
\setbeamercolor{titlelike}{parent=structure}
\setbeamercolor{frametitle}{fg=faugray}

% Normal text
\setbeamercolor{normal text}{fg=black}
\setbeamercolor{alerted text}{fg=red}
\setbeamercolor{example text}{fg=green!75!black}

% Headline
\setbeamercolor{headline}{parent=structure}

% Footline
\setbeamercolor{footline}{fg=faublue}

% Captions
\setbeamercolor{caption}{parent=normal text}
\setbeamercolor{caption name}{parent=structure}


%%%%%%%%%%%%%%%%%%%%%%%%% Enumerations and lists %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Enumerate item
\setbeamercolor{enumerate item}{parent=structure}
\setbeamercolor{enumerate subitem}{parent=structure}
\setbeamercolor{enumerate subsubitem}{parent=structure}

% Itemize item
\setbeamercolor{itemize item}{parent=structure}
\setbeamercolor{itemize subitem}{parent=structure}
\setbeamercolor{itemize subsubitem}{parent=structure}

% Description item
\setbeamercolor{description item}{parent=structure}
\setbeamercolor{description subitem}{parent=structure}
\setbeamercolor{description subsubitem}{parent=structure}
%%%%%%%%%%%%%%%%%%%%%%% Enumerations and lists end %%%%%%%%%%%%%%%%%%%%%%%%%%%%%


% Block environment
\setbeamercolor{block body}{bg=faugray!25,fg=black}
\setbeamercolor{block body alerted}{}
\setbeamercolor{block body example}{}
\setbeamercolor{block title}{bg=faugray!50,fg=faubluedark}
\setbeamercolor{block title alerted}{bg=faured!25,fg=faureddark}
\setbeamercolor{block body alerted}{bg=faured!12,fg=black}
\setbeamercolor{block title example}{bg=faugreen!25,fg=faugreendark}
\setbeamercolor{block body example}{bg=faugreen!12,fg=black}


\mode
<all>
