\mode<presentation>


%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% Title page %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\newcommand{\titlepagebody}[2][\empty]{%
	\begin{pgfpicture}{\factor*1.56cm}{0cm}% Minus left margin
		{\paperwidth}{\paperheight}
		% Headline
		\pgfputat{\pgfpoint{\paperwidth-\factory*1.77cm}%
			{\paperheight-\factory*0.7cm}}{%
			\pgfbox[right,top]{%
				\pgfuseimage{faulogo-large}
			}
		}
		% Additional headline logo
		\ifx#1\empty\else
			\pgfputat{\pgfpoint{\paperwidth-\factory*1.77cm-\factor*7.03cm}%
				{\paperheight-\factory*0.7cm}}{%
				\pgfbox[right,top]{%
					#1
				}
			}
		\fi

		% Decoration on the left
		\color{maincolor}%
		\pgfrect[fill]{\pgfpoint{0pt}{\paperheight}}%
		{\pgfpoint{\paperwidth}{\paperheight}}

		\ifbeamer@plain%

		% Plain background box
		% \pgfrect[fill]{\pgfpoint{\factor*.85cm}{\paperheight-\factor*3.68cm}}%
		% {\pgfpoint{\paperwidth-\factor*.85cm}{-\factor*14.5cm}}

		% Title
		\pgfputat{\pgfpoint{\factorx*1.5cm}{\paperheight-\factor*3.88cm}}{%
			\pgfbox[left,top]{%
				\usebeamercolor[fg]{title}
				\pgfmathparse{\factorx*23.8cm}%
				\parbox{\pgfmathresult pt}{%
					\smallskip\raggedright%
					\usebeamerfont{title}{#2}
				}
			}
		}

		% Only show subtitle and author for title page
		\ifx#2\inserttitle%

			% Subtitle
			\pgfputat{\pgfpoint{\factorx*1.1cm}{\paperheight-\factor*10.6cm}}{%
				\pgfbox[left,top]{%
					\usebeamercolor[fg]{title page}
					\pgfmathparse{\factorx*23.8cm}%
					\parbox{\pgfmathresult pt}{%
						\smallskip\raggedright%
						\usebeamerfont{subtitle}{\insertsubtitle}
					}
				}
			}

			% Author, institute, and date
			\pgfputat{\pgfpoint{\factorx*1.1cm}{\paperheight-\factor*18.18cm}}{%
				\pgfbox[left,bottom]{%
					\usebeamercolor[fg]{title page}
					\pgfmathparse{\factorx*23.8cm}%
					\parbox{\pgfmathresult pt}{%
						\raggedright\fontsize{9}{11}\selectfont
						\setbox0=\hbox{\insertauthor\unskip}\ifdim\wd0=0pt\else%
							\insertauthor\newline
						\fi%
						\setbox0=\hbox{\insertinstitute\unskip}\ifdim\wd0=0pt\else%
							\insertinstitute\newline
						\fi%
						\setbox0=\hbox{\insertdate\unskip}\ifdim\wd0=0pt\else%
							\insertdate
						\fi%
						\smallskip
					}
				}
			}
		\fi

		\else%

		% Disable long title and image for non-title pages
		\ifx#2\inserttitle\else%
			\beamer@longtitlefalse
			\beamer@imagefalse
		\fi

		\ifbeamer@longtitle%
			%%%%%%%%%%%%%%%% Title page %%%%%%%%%%%%
			% Upper box
			\pgfrect[fill]{\pgfpoint{0}{\paperheight}}%
			{\pgfpoint{\paperwidth}{-\factor*21cm}}

			\color{faugraydark}
			\pgfrect[fill]{\pgfpoint{\factorx*1.5cm}{\factor*15cm}}
			{\pgfpoint{\paperwidth}{0.08cm}}

			% Headline
			\pgfputat{\pgfpoint{\paperwidth-\factory*1.77cm}%
				{\paperheight-\factory*0.7cm}}{%
				\pgfbox[right,top]{%
					\pgfuseimage{faulogo-white}
				}
			}
			% Additional headline logo
			\ifx#1\empty\else
				\pgfputat{\pgfpoint{\paperwidth-\factory*1.77cm-\factor*7.03cm}%
					{\paperheight-\factory*0.7cm}}{%
					\pgfbox[right,top]{%
						#1
					}
				}
			\fi

			% Title
			\pgfputat{\pgfpoint{\factorx*1.5cm}{\paperheight-\factor*4.88cm}}{%
				\pgfbox[left,top]{%
					\usebeamercolor[fg]{title}
					\pgfmathparse{\factorx*23.8cm}%
					\parbox{\pgfmathresult pt}{%
						\smallskip\raggedright%
						\usebeamerfont{title}{#2}
					}
				}
			}

			% Only show subtitle and author for title page
			\ifx#2\inserttitle%

				% Subtitle
				\pgfputat{\pgfpoint{\factorx*1.5cm}{\paperheight-\factor*8.42cm}}{%
					\pgfbox[left,top]{%
						\usebeamercolor[fg]{title page}
						\pgfmathparse{\factorx*23.8cm}%
						\parbox{\pgfmathresult pt}{%
							\smallskip\raggedright%
							\usebeamerfont{subtitle}{\insertsubtitle}
						}
					}
				}

				% Author, institute, and date
				\pgfputat{\pgfpoint{\factorx*1.5cm}{\paperheight-\factor*11.94cm}}{%
					\pgfbox[left,bottom]{%
						\usebeamercolor[fg]{title page}
						\pgfmathparse{\factorx*23.8cm}%
						\parbox{\pgfmathresult pt}{%
							\raggedright\fontsize{9}{11}\selectfont
							\setbox0=\hbox{\insertauthor\unskip}\ifdim\wd0=0pt\else%
								\insertauthor\newline
							\fi%
							\setbox0=\hbox{\insertinstitute\unskip}\ifdim\wd0=0pt\else%
								\insertinstitute\newline
							\fi%
							\setbox0=\hbox{\insertdate\unskip}\ifdim\wd0=0pt\else%
								\insertdate
							\fi%
							\smallskip
						}
					}
				}
			\fi

		\else % Not long title
			%%%%%%%%%%%%%%%% section page %%%%%%%%%%%%
			% Upper box
			\pgfrect[fill]{\pgfpoint{0}{\paperheight}}%
			{\pgfpoint{\paperwidth}{-\factor*21cm}}

			\color{faugraydark}
			\pgfrect[fill]{\pgfpoint{\factor*1.5cm}{\factor*15cm}}
			{\pgfpoint{\paperwidth}{0.08cm}}

			% Headline
			\pgfputat{\pgfpoint{\paperwidth-\factory*1.77cm}%
				{\paperheight-\factory*0.7cm}}{%
				\pgfbox[right,top]{%
					\pgfuseimage{faulogo-white}
				}
			}
			% Additional headline logo
			\ifx#1\empty\else
				\pgfputat{\pgfpoint{\paperwidth-\factory*1.77cm-\factor*7.03cm}%
					{\paperheight-\factory*0.7cm}}{%
					\pgfbox[right,top]{%
						#1
					}
				}
			\fi

			% Title
			\pgfputat{\pgfpoint{\factorx*1.5cm}{\paperheight-\factor*4.88cm}}{%
				\pgfbox[left,top]{%
					\usebeamercolor[fg]{title}
					\pgfmathparse{\factorx*23.8cm}%
					\parbox{\pgfmathresult pt}{%
						\smallskip\raggedright%
						\usebeamerfont{title}{#2}
					}
				}
			}

			% Only show subtitle and author for title page
			\ifx#2\inserttitle%

				% Subtitle
				\pgfputat{\pgfpoint{\factorx*1.5cm}{\paperheight-\factor*8.52cm}}{%
					\pgfbox[left,top]{%
						\usebeamercolor[fg]{title page}
						\pgfmathparse{\factorx*23.8cm}%
						\parbox{\pgfmathresult pt}{%
							\smallskip\raggedright%
							\usebeamerfont{subtitle}{\insertsubtitle}
						}
					}
				}

				% Shortauthor, shortinstitute, and shortdate (all in single line)
				\pgfputat{\pgfpoint{\factorx*1.5cm}{\paperheight-\factor*11.26cm}}{%
					\pgfbox[left,bottom]{%
						\usebeamercolor[fg]{title page}
						\pgfmathparse{\factorx*23.8cm}%
						\parbox{\pgfmathresult pt}{%
							\raggedright\fontsize{9}{11}\selectfont%
							\setbox0=\hbox{\insertshortauthor\unskip}\ifdim\wd0=0pt\else%
								\mbox{\insertshortauthor}%
							\fi%
							\setbox0=\hbox{\insertshortinstitute\unskip}\ifdim\wd0=0pt\else%
								\setbox0=\hbox{\insertshortauthor\unskip}\ifdim\wd0=0pt\else%
									,\ %
								\fi%
								\mbox{\insertshortinstitute}%
							\fi%
							\setbox0=\hbox{\insertshortdate\unskip}\ifdim\wd0=0pt\else%
								\setbox0=\hbox{\insertshortauthor\unskip}\ifdim\wd0=0pt%
									\setbox0=\hbox{\insertshortinstitute\unskip}\ifdim\wd0=0pt\else%
										,\ %
									\fi
								\else%
									,\ %
								\fi%
								\mbox{\insertshortdate}
							\fi%
							\smallskip
						}
					}
				}
			\fi

			\ifdefined\beamer@@tmpl@logo\ifbeamer@image\else%
					% Draw logo
					\pgfputat{\pgfpoint{\paperwidth-\factorx*1.24cm}%
						{\paperheight-\factor*17.1cm}}{%
						\pgfbox[right,bottom]{%
							\insertlogo
						}
					}
				\fi\fi

		\fi % End plain
	\end{pgfpicture}
}
\setbeamertemplate{title page}{%
	\titlepagebody{\inserttitle}
}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% Title page end %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%


%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% Section page %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\newcommand{\sectionpagebody}{%
	\titlepagebody{\insertsection}
}
\AtBeginSection{%
	\frame[plain,c,noframenumbering]{%
		\sectionpagebody%
	}% End frame
}
